{
    "title": "Insert Date",
    "rules": [
        {
            "description": "Insert date (format: YY.MM.DD Day)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "mandatory": [
                                "right_command",
                                "right_control",
                                "right_shift",
                                "right_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "cal $(date '+%m %Y') | awk 'NR>2 {for(i=1;i<=NF;i++) print $i}' | while read day; do date -j -f '%Y-%m-%d' \"$(date '+%Y-%m')-$(printf '%02d' $day)\" '+%y.%m.%d %a' 2>/dev/null; done | pbcopy && osascript -e 'tell application \"System Events\" to keystroke \"v\" using command down'"
                        }
                    ]
                }
            ]
        }
    ]
}